<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context="com.mozo.meyaz.colicbaby.MainActivity"
                android:background="#ffffff">

    <RelativeLayout
        android:id="@+id/appEkrani"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="90dp"
        android:visibility="invisible">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:background="#0098cc"
            android:orientation="horizontal"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/appBarLogoImage"
                    android:layout_width="55dp"
                    android:layout_height="57dp"
                    android:adjustViewBounds="true"
                    android:onClick="logoTiklandi"
                    android:scaleType="fitXY"
                    android:src="@drawable/logo_vector"
                    android:tint="#ffffff"/>

                <TextView
                    android:id="@+id/kolik"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:autoText="false"
                    android:text="@string/app_name"
                    android:textColor="#ffffff"
                    android:textSize="24sp"
                    android:textStyle="normal"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/iptalButon"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="left|center"
                    android:layout_marginRight="30dp"
                    android:background="#0098cc"
                    android:onClick="Sayici"
                    android:scaleType="fitXY"
                    android:src="@android:drawable/ic_delete"
                    android:visibility="gone"/>

                <ImageButton
                    android:id="@+id/kapatButon"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="20dp"
                    android:background="#0098cc"
                    android:onClick="Sayici"
                    android:scaleType="fitXY"
                    android:src="@android:drawable/ic_lock_idle_alarm"/>

                <Button
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/buton_tip"
                    android:onClick="cikis"
                    android:shadowColor="#402525"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="10"
                    android:text="@string/cikis_btn"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/linearLayout"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/supurge_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:background="#ffffff"
                    android:baselineAlignBottom="false"
                    android:cropToPadding="false"
                    android:onClick="ses1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/supurge_resim"/>

                <ImageButton
                    android:id="@+id/fon_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:background="#ffffff"
                    android:onClick="ses2"
                    android:scaleType="fitCenter"
                    android:src="@drawable/fon_resim"/>

                <ImageButton
                    android:id="@+id/camasir_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:background="#ffffff"
                    android:onClick="ses3"
                    android:scaleType="fitCenter"
                    android:src="@drawable/makina_resim"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/kalp_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:background="#ffffff"
                    android:onClick="ses4"
                    android:scaleType="fitCenter"
                    android:src="@drawable/kalp_resim"/>

                <ImageButton
                    android:id="@+id/annekarni_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:background="#ffffff"
                    android:onClick="ses5"
                    android:scaleType="fitCenter"
                    android:src="@drawable/anne_resim"/>

                <ImageButton
                    android:id="@+id/fan_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:background="#ffffff"
                    android:onClick="ses6"
                    android:scaleType="fitCenter"
                    android:src="@drawable/fan_resim"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/araba_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:background="#ffffff"
                    android:onClick="ses7"
                    android:scaleType="fitCenter"
                    android:src="@drawable/araba_resim"/>

                <ImageButton
                    android:id="@+id/banyo_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:background="#ffffff"
                    android:onClick="ses8"
                    android:scaleType="fitCenter"
                    android:src="@drawable/dus_resim"/>

                <ImageButton
                    android:id="@+id/yagmur_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:background="#ffffff"
                    android:onClick="ses9"
                    android:scaleType="fitCenter"
                    android:src="@drawable/yagmur_resim"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/white_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:background="#ffffff"
                    android:onClick="ses10"
                    android:scaleType="fitCenter"
                    android:src="@drawable/white_noise"/>

                <ImageButton
                    android:id="@+id/tren_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:background="#ffffff"
                    android:onClick="ses11"
                    android:scaleType="fitCenter"
                    android:src="@drawable/tren_resim"/>

                <ImageButton
                    android:id="@+id/musicbox_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:background="#ffffff"
                    android:onClick="ses12"
                    android:scaleType="fitCenter"
                    android:src="@drawable/musicbox_resim"/>
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/splashEkrani"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="90dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/background_light"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/colicLogoImage"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    ads:srcCompat="@drawable/logo_vector"
                    tools:ignore="VectorDrawableCompat" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/colicLogoImage"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="serif"
                    android:text="@string/app_name"
                    android:textColor="@color/com_facebook_blue"
                    android:textSize="48sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="cursive"
                    android:text="@string/slogan"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:textColor="@color/colorAccent"
                    android:textSize="24sp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
